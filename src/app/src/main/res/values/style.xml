<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CustomButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textColor">#000000</item>  <!-- 黑色文本 -->
        <item name="android:elevation">4dp</item>  <!-- 增加阴影效果 -->
        <item name="android:backgroundTint">#FFFFFF</item>  <!-- 设置按钮背景颜色为白色 -->
        <item name="rippleColor">#FFABABAB</item>  <!-- 设置涟漪效果的颜色 -->
        <item name="strokeColor">#FFABABAB</item>  <!-- 设置边框颜色 -->
        <item name="strokeWidth">1dp</item>  <!-- 设置边框宽度 -->
        <item name="cornerRadius">4dp</item>  <!-- 设置圆角大小 -->
    </style>
</resources>